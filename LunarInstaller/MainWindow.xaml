<Window x:Class="LunarInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lunar Installer" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <Button Name="DownloadAndInstallButton" Content="Download and Install" Click="DownloadAndInstallButton_Click"/>
            <ProgressBar Name="DownloadProgressBar" Width="300" Height="20" Margin="0,10,0,0" Maximum="100" Minimum="0" Value="0"/>
        </StackPanel>
    </Grid>
</Window>
